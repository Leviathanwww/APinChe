<view class="lobbyContainer">
  <!-- 新建房间我的房间 -->
  <view class="headContainer">
    <view class="icon-Item">
      <view class="iconfont" bindtap="toNewRoom">
        <mp-icon icon="add" size="{{40}}" color="white" type="field"></mp-icon>
      </view>
      <text>新建房间</text>
    </view>
    <view class="location">
      <text>您定位的起点是：\n</text>
      <text style="color:red">{{location}}</text>
    </view>
    <view class="icon-Item">  
      <view class="iconfont">
        <mp-icon extClass="icon" icon="home" size="{{40}}" color="white" type="field"></mp-icon>
      </view>
      <text>我的房间</text>
    </view>
  </view>
  <!-- 房间查找 -->
  <scroll-view class="roomFrame" scroll-y="true">
    <view class="roomItem" wx:for="{{room}}" wx:key="id" wx:if="{{item.number < 4}}" >
      <view class="info">
        <view class="nickName">
          <text>{{item.nickName}}</text>
        </view>
        <view class="position">
          <mp-icon icon="arrow" size="{{14}}"></mp-icon>
          <text>{{item.destination}}</text>
        </view>
      </view>
      <view class="info">
        <view class="owner">
          <text>{{item.owner}}</text>
        </view>
        <view class="time">
          <text>发车时间：</text>
          <text style="color:red">{{item.departureTime}}</text>
        </view>
      </view>
      <view class="info">
      <view class="label">
        <text>{{item.label}}</text>
      </view>
      <view class="number">
        <text>当前人数：</text>
        <text style="color:red">{{item.number}}/4</text>
      </view>
      <view class="into">
        <text>进入房间</text>
      </view>
    </view>
    </view>
  </scroll-view>
  <view class="chatBox"></view>
</view>